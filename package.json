{
  "name": "spaceSim",
  "version": "0.0.0",
  "babel": {
    "presets": [
      "env"
    ]
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "baobab": "^2.5.2",
    "bluebird": "^3.5.0",
    "browser-bunyan": "^0.4.0",
    "gpu.js": "^1.10.4",
    "msgpack-lite": "^0.1.26",
    "postprocessing": "^2.3.1",
    "socket.io": "^2.0.3",
    "superstruct": "^0.6.0",
    "three": "^0.87.1",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "css-loader": "^2.1.0",
    "file-loader": "^3.0.1",
    "graceful-fs": "^4.1.11",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "^4.6.0",
    "raw-loader": "^1.0.0",
    "standard": "^12.0.1",
    "style-loader": "^0.23.1",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.14",
    "worker-loader": "^2.0.0"
  },
  "eslintConfig": {
    "extends": "standard",
    "globals": {
      "THREE": false,
      "OIMO": false,
      "postMessage": false,
      "self": true,
      "requestAnimationFrame": false
    },
    "rules": {
      "object-curly-spacing": [
        2,
        "always"
      ],
      "array-bracket-spacing": [
        2,
        "always"
      ],
      "func-style": [
        2,
        "expression"
      ],
      "prefer-arrow-callback": [
        2,
        {
          "allowNamedFunctions": false
        }
      ]
    }
  },
  "scripts": {
    "build": "NODE_ENV=production webpack --progress --colors  --config webpack.config.prod.js",
    "clean": "rm -rf dist/*",
    "dev": "webpack-dev-server"
  }
}
