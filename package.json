{
  "name": "spaceSim",
  "version": "0.0.0",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "shippedProposals": true,
          "targets": {
            "browsers": [
              ">50%"
            ]
          }
        }
      ],
      "@babel/preset-react"
    ],
    "plugins": [
      "react-hot-loader/babel"
    ]
  },
  "dependencies": {
    "baobab": "^2.5.2",
    "baobab-react": "^3.0.0",
    "bluebird": "^3.5.0",
    "browser-bunyan": "^0.4.0",
    "gpu.js": "^1.10.4",
    "msgpack-lite": "^0.1.26",
    "postprocessing": "^2.3.1",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-icons": "^3.3.0",
    "recompose": "^0.30.0",
    "socket.io": "^2.0.3",
    "superstruct": "^0.6.0",
    "three": "^0.87.1",
    "throttle-debounce": "^2.0.1",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.2",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.0-beta.6",
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^2.1.0",
    "file-loader": "^3.0.1",
    "graceful-fs": "^4.1.11",
    "html-webpack-plugin": "^3.2.0",
    "image-webpack-loader": "^4.6.0",
    "raw-loader": "^1.0.0",
    "react-hot-loader": "^4.6.3",
    "standard": "^12.0.1",
    "style-loader": "^0.23.1",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.14",
    "worker-loader": "^2.0.0"
  },
  "eslintConfig": {
    "extends": [
      "standard",
      "plugin:react/recommended"
    ],
    "globals": {
      "THREE": false,
      "OIMO": false,
      "postMessage": false,
      "self": true,
      "requestAnimationFrame": false
    },
    "rules": {
      "object-curly-spacing": [
        2,
        "always"
      ],
      "array-bracket-spacing": [
        2,
        "always"
      ],
      "func-style": [
        2,
        "expression"
      ],
      "prefer-arrow-callback": [
        2,
        {
          "allowNamedFunctions": false
        }
      ],
      "react/jsx-curly-spacing": [
        2,
        "always"
      ],
      "jsx-quotes": [
        "error",
        "prefer-single"
      ],
      "react/prop-types": 0,
      "react/display-name": 0
    }
  },
  "scripts": {
    "build": "NODE_ENV=production webpack -p --progress --colors",
    "clean": "rm -rf dist/*",
    "dev": "webpack-dev-server",
    "start": "node app/server.js",
    "postinstall": "npm build"
  }
}
